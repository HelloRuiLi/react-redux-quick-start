{
  "filesGlob": [
    "../typings/globals/**/*.*.ts",
    "**/*.{ts,tsx}"
  ],
  "compilerOptions": {
    "outDir": "./dist",
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "commonjs",
    "target": "es6",
    "jsx": "preserve",
    "moduleResolution": "node"
  },
  "exclude": [
    "./typings/index.d.ts",
    "node_modules"
  ],
  "files": [
    "./mobile/onboarding/components/Hello.tsx",
    "./mobile/onboarding/components/Header.tsx",
    "./mobile/onboarding/containers/App.tsx",
    "./mobile/onboarding/containers/Dashboard.tsx",
    "./mobile/onboarding/containers/Inbox.tsx"
  ],
  "atom": {
    "rewriteTsconfig": true
  }
}