{
  "compilerOptions": {
    "rootDir": ".",
    "outDir": "build",
    "jsx": "react",
    "module": "commonjs",
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "sourceMap": true,
    "typeRoots": [
      "./node_modules/@types/"
    ]
  },
  "exclude": [
    "dist",
    "node_modules/*",
    "**/*.spec.ts{,x}"
  ],
  "compileOnSave": false,
  "buildOnSave": false,
  "atom": {
    "rewriteTsconfig": false
  },
  "awesomeTypescriptLoaderOptions": {
    "useBabel": true,
    "useCache": true
  }
}